				<?php 
					$section_loop = new WP_Query(
					 array(
					 'post_type' => 'section', 
					 'category_name' => $category,
					 'posts_per_page' => -1,
					 'orderby' => 'menu_order')
					 );
				 ?>

				<?php while ( $section_loop->have_posts() ) : $section_loop->the_post(); ?>
